<div class="container">
  <%=  form_with url: "/login", method: :post do |f|%>
    <div class="form-group">
      <%= f.label :email, "Email:" %><br>
      <%= f.email_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password:" %><br>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "Log In" %>
  <% end %>
</div>
<div class="container">
    <h1><%= @dream.title %></h1>
    <h3>Type: <%= @dream.dream_type %></h3>
    <div>
        <h3>Content:</h3>
        <p><%= @dream.content %></p>
    </div>
    <h3>Public: <%= @dream.is_public ? "Yes" : "No" %></h3>
    <% if @dream.user == current_user %>
        <%= form_with url: edit_user_dream_path(current_user, @dream) do |f| %>
            <%= f.submit "Edit" %>
        <% end %>
        <br>
        <%= form_with method: :post, url: "/users/#{current_user.id}/dreams/#{@dream.id}" do |f| %>
            <%= f.submit "Delete", data: { confirm: 'Are you sure you want to delete this dream?' } %>
        <% end %>
        <br>
    <% end %>
    

    
</div>
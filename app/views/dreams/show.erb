<div class="container">
    <h1><%= @dream.title %></h1>
    <h3>Type: <%= @dream.dream_type %></h3>
    <h3>Content:</h3>
    <p><%= @dream.content %></p>
    <% if @dream.user == current_user %>
        <h3>Public: <%= @dream.is_public ? "Yes" : "No" %></h3>
        <br>
        <h3>Add Symbols to <%= @dream.title %></h3>
        <br>
        <%= button_to "Edit", edit_user_dream_path(current_user, @dream), method: :get %>
        <br>
        <%= form_with method: :delete, url: "/users/#{current_user.id}/dreams/#{@dream.id}" do |f| %>
            <%= f.submit "Delete", data: { confirm: 'Are you sure you want to delete this dream?' } %>
        <% end %>
        <br>
    <% end %>
    

    
</div>
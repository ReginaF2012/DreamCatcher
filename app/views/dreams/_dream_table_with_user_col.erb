
    <table style="border-radius: 5px" class="table table-striped table-dark">
        <thead>
            <tr>
            <th colspan="3"><h3>Dreams</h3></th>
            </tr>
            <tr>
            <th scope="col">Title</th>
            <th scope="col">Type</th>
            <th scope="col">User</th>
            </tr>
        </thead>
        <tbody>
            <% @dreams.each do |dream| %>
                <tr>
                <th scope="row"><%= link_to dream.title, user_dream_path(dream.user, dream) %></th>
                <td><%= dream.dream_type %></td>
                <td><%= link_to icon('fas', 'user') + " " + dream.user.username, user_path(dream.user) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <br>
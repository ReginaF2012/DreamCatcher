    <br>
    
    <h1><%= icon('fas', 'user') + " " + @user.username %></h1>
    <table style="border-radius: 5px" class="table table-striped table-dark">
        <thead>
                <tr>
                <% if @user == current_user%>
                    <th colspan="3"><h3>Your Dream Logs</h3></th>
                <% else%>
                    <th colspan="3"><h3><%= @user.username %>'s Dream Logs</h3></th>
                <% end%>
            </tr>
            <tr>
            <th scope="col">Title</th>
            <th scope="col">Type</th>
            </tr>
        </thead>
        <tbody>
            <% @dreams.each do |dream| %>
                <tr>
                <th scope="row"><%= link_to dream.title, user_dream_path(dream.user, dream) %></th>
                <td><%= dream.dream_type %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <br>
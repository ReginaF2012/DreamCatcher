
<%= bootstrap_form_with model: user, local: true do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2>
        <%= pluralize(user.errors.count, "error") %>
        prohibited this user from being saved:
      </h2>
  
      <ul>
      <% user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.text_field :username, label: "Username:" %><br>

    <%= f.email_field :email, label: "Email:" %><br>

    <%= f.password_field :password, label: "Password:" %><br>

    <%= f.password_field :password_confirmation, label: "Password Confirmation:" %><br>

  <%= f.submit "Sign Up" if !logged_in? %>
  <%= f.submit "Edit" if logged_in? %>
<% end %>
<br>